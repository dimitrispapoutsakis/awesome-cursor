{
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": ["DOM", "ES2021"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./components/*"],
			"@utils/*": ["./utils/*"],
			"@helpers/*": ["./helpers/*"],
			"@constants/*": ["./constants/*"]
		}
	},
	"include": ["src"]
}
